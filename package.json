{
  "name": "process-scheduling-visualization",
  "version": "1.0.0",
  "description": "一个用electron-vite写的进程调度可视化作业",
  "main": "./out/main/index.js",
  "author": "2020401387刘宇阳",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "pnpm run build && electron-builder --win --config",
    "build:mac": "pnpm run build && electron-builder --mac --config",
    "build:linux": "pnpm run build && electron-builder --linux --config"
  },
  "build":{
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "shortcutName": "进程调度可视化"
    },
    "productName": "进程调度可视化",
    "copyright": "刘宇阳2020401387 Copyright © 2022"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.2",
    "@electron-toolkit/utils": "^1.0.2",
    "element-plus": "^2.2.21"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "electron": "^20.3.1",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.2.1",
    "electron-vite": "^1.0.14",
    "eslint": "^8.24.0",
    "eslint-plugin-vue": "^9.6.0",
    "less": "^4.1.3",
    "prettier": "^2.7.1",
    "unplugin-auto-import": "^0.11.4",
    "unplugin-vue-components": "^0.22.9",
    "vite": "^3.1.6",
    "vue": "^3.2.40"
  }
}
